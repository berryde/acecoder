{
	"compilerOptions": {
		"importsNotUsedAsValues": "error",
		"sourceMap": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"allowJs": true,
		"outDir": "build",
		"paths": {
			"~shared/*": ["../shared/*"]
		},
		"rootDirs": ["./src", "../shared"]
	}
}
