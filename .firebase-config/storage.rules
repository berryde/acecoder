rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /badges/{image} {
      allow read:
        if request.auth != null;
      allow write:
        if request.auth != null && request.auth.token.admin == true;
    }
    match /thumbnails/{image} {
      allow read:
        if request.auth != null;
      allow write:
        if request.auth != null && request.auth.token.admin == true;
    }
  }
}
