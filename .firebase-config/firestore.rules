rules_version = '2';
service cloud.firestore {

  match /databases/{database}/documents {
    match /exercises/{exerciseId} {
      allow read: if
           request.auth != null
      allow write: if
        request.auth != null && request.auth.token.admin == true;
    }
    match /submissions/{submissionId} {
      // Users should only be allowed to access their own submissions
      allow read, write: if
          request.auth != null &&
          submissionId.matches('.*' + request.auth.uid)
    }
    match /templates/{templateId} {
      allow read: if
           request.auth != null
    }
    match /feedback/{feedbackId} {
      allow read: if
          request.auth != null && request.auth.token.admin == true;
      allow write: if
          request.auth != null
    }
    match /results/{submissionId} {
      // Users should only be allowed to access their own results
      allow read: if
          request.auth != null &&
          submissionId.matches('.*' + request.auth.uid);
    }
    match /settings/{userId} {
      allow write: if
        request.auth != null && userId == request.auth.uid
      allow read: if
        request.auth != null && userId == request.auth.uid
    }
    match /projects/{projectId} {
      allow read: if
        request.auth != null
      allow write: if
        request.auth != null && request.auth.token.admin == true;
    }
    match /projects/{projectId}/exercises {
      allow read: if
        request.auth != null
      allow write: if
        request.auth != null && request.auth.token.admin == true;
    }
    match /projects/{projectId}/exercises/{exerciseId} {
      allow read: if
        request.auth != null
      allow write: if
        request.auth != null && request.auth.token.admin == true;
    }
    match /exercise_files/{exerciseId} {
      allow read: if
        request.auth != null
      allow write: if
        request.auth != null && request.auth.token.admin == true;
    }
    match /exercise_files/{exerciseId}/languages/{language} {
      allow read: if
        request.auth != null
      allow write: if
        request.auth != null && request.auth.token.admin == true;
    }
    match /exercise_chapters/{exerciseId} {
      allow read: if
        request.auth != null
      allow write: if
        request.auth != null && request.auth.token.admin == true;
    }
     
  }
}