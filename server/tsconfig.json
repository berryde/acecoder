{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6"],
		"outDir": "build",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"paths": {
			"~shared/*": ["../shared/*"]
		},
		"rootDirs": ["./src", "../shared"]
	},
	"include": ["src/**/*"],
	"exclude": ["build", "submissions"]
}
